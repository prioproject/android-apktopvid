<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".PencegahanActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorGreenlight"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="5dp"
                android:src="@drawable/cuci" />


            <TextView
                android:id="@+id/name_cuci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="5dp"
                android:textColor="#fff"
                android:text="cuci"/>

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/makan"
                android:padding="5dp"
                android:layout_below="@id/image3"/>

            <TextView
                android:id="@+id/name_makan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="makan"/>

            <ImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/olahraga"
                android:padding="5dp"
                android:layout_below="@id/image4"/>

            <TextView
                android:id="@+id/name_olah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="olahraga"/>

            <ImageView
                android:id="@+id/image6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="5dp"
                android:src="@drawable/masker"
                android:layout_below="@id/image5"/>

            <TextView
                android:id="@+id/name_masker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="olahraga"/>

            <ImageView
                android:id="@+id/image7"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/faskes"
                android:padding="5dp"
                android:layout_below="@id/image6"/>

            <TextView
                android:id="@+id/name_faskes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#fff"
                android:padding="5dp"
                android:text="Rumah sakit"/>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>